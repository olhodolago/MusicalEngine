<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="textBlockStyle" x:Name="Literals" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Opacity" Value="50"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    <Style x:Key="tButton" x:Name="toggle" TargetType="ToggleButton">
        <Setter Property="Width" Value="50"></Setter>
        <Setter Property="Background" Value="Blue"></Setter>
    </Style>
    <Style x:Key="sPanel1" x:Name="sPanel1" TargetType="StackPanel">
        <Setter Property="Background" Value="Green"></Setter>
        <Setter Property="Width" Value="50"></Setter>
        <Setter Property="Height" Value="200"></Setter>
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
    </Style>

</ResourceDictionary>
